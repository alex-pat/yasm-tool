<h4 id="addComment"><%= t("comments.leave") %></h4>
<%= form_for [@user, @site, @site.comments.build], remote: true do |f| %>
    <p>
      <%= f.text_area :comment, :class => "form-control" %>
    </p>
    <p>
      <%= f.submit :value => t("comments.new"), :class => "btn btn-success" %>
    </p>
<% end %>
<hr>
