<div class="container">
  <div class="col-xs-offset-4 col-xs-4">
    <div class="well" align="center">
      <%= form_for(resource, as: resource_name,
                   url: registration_path(resource_name),
                   :html => {:class => 'form-horizontal'}) do |f| %>
        <fieldset>
          <legend><%= t("layouts.application.navbar.sign_up") %></legend>
              <%= devise_error_messages! %>

            <div class="form-group">
              <div class="col-lg-12">
                <%= f.text_field :username,
                                 autofocus: true,
                                 :class => 'form-control',
                                 :placeholder => t("sessions.username") %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-12">
                <%= f.email_field :email,
                                  :class => 'form-control',
                                  :placeholder => t("sessions.email") %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-12">
                <%= f.password_field :password,
                                     autocomplete: "off",
                                     :class => 'form-control',
                                     :placeholder => t("sessions.pass", length: @minimum_password_length) %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-12">
                <%= f.password_field :password_confirmation,
                                     autocomplete: "off",
                                     :class => 'form-control',
                                     :placeholder => t("sessions.confirm_pass") %>
              </div>
            </div>

            <div class="actions">
              <%= f.submit t("sessions.submit"), :class => "btn btn-default" %>
            </div>
        </fieldset>
      <br/>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
