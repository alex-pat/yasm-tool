<%- if devise_mapping.omniauthable? %>
  <%= t("sessions.networks") %> <br>
  <%= link_to '<i class="fa fa-vk fa-2x" aria-hidden="true"></i>'.html_safe, user_vkontakte_omniauth_authorize_path %>
  <%= link_to '<i class="fa fa-facebook fa-2x" aria-hidden="true"></i>'.html_safe, user_facebook_omniauth_authorize_path %>
  <%= link_to '<i class="fa fa-twitter fa-2x" aria-hidden="true"></i>'.html_safe, user_twitter_omniauth_authorize_path %>
<% end %>
<br/>
<br/>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("layouts.application.navbar.sign_up"), new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("sessions.forgot"), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t("sessions.confirmation_instructions"), new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t("sessions.unlock"), new_unlock_path(resource_name) %><br />
<% end -%>
