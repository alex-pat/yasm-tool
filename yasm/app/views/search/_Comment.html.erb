<div class="result-container" onclick='window.location="<%= user_site_path(Site.find(result.commentable_id).user, :id => result.commentable_id) %>"'>
  <div class="result-header">
    <h3>
      <i class="fa fa-comment-o" aria-hidden="true"></i>
      <%= link_to result.user.username, user_path(result.user) %>
    </h3>
  </div>
  <div class="result-description">
    <h4>
      <%= image_tag(result.user.avatar,
                    :class => "img-responsive img-circle img-thumbnail",
                    :align => "left",
                    :hspace => 20,
                    :vspace => 5) %>

      <%= highlight(hit, :comment) || result.comment %>
    </h4>
  </div>
</div>
