<div class="result-container" onclick='window.location="<%= user_site_path(result.user, result) %>"'>
  <div class="result-header">
    <h3>
      <i class="fa fa-globe" aria-hidden="true"></i>
      <%= link_to (highlight(hit, :title) || result.title), user_site_page_path(result.user, result, result.pages.first) %>
    </h3>
  </div>
  <div class="result-description">
    <h4>
      <%= image_tag(result.logo,
                    :class => "img-responsive img-rounded img-thumbnail",
                    :align => "left",
                    :hspace => 20,
                    :vspace => 5) %>
      <%= highlight(hit, :description) || result.description[0..200] %>
    </h4>
  </div>
</div>
