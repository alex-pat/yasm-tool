<div class="result-container" onclick='window.location="<%= user_site_path(result.site.user, result.site) %>";'>
  <div class="result-header">
    <h3>
      <i class="fa fa-file-text-o" aria-hidden="true"></i>
      <%= link_to (highlight(hit, :title) || result.title), user_site_page_path(result.site.user, result.site, result) %>
    </h3>
  </div>
  <div class="result-description">
    <h4>
      <%= image_tag(result.site.logo,
                    :class => "img-responsive img-rounded img-thumbnail",
                    :align => "left",
                    :hspace => 20,
                    :vspace => 5) %>
      <% if result.components.where(:kind => "text").first %>
        <%= highlight(hit, :text) || result.components.where(:kind => "text").first.content[0..200] %>
      <% end %>
    </h4>
  </div>
</div>
